#include <stdlib.h>
#include <stdio.h>

int main(void) {
    int n;
    int winner=0, win_num=0;
    double s1, s2, s3;
    double avg= 0.0;
    while(1==scanf){
    printf("Enter scores: ");
    scanf("%d%lg%lg%lg", &n, &s1, &s2, &s3);
    if(s1<s2 && s1<s3) {
        avg = (s2+s3)/2;
    }
    else if(s2<s1 && s2<s3) {
        avg = (s1+s3)/2;
    }
    else {
        avg = (s1+s2)/2;
    }
    if(avg>winner) {
        win_num = n;
    }
    }
    printf("%d",win_num);

    return EXIT_SUCCESS;
}
